generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Blog {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  slug    String   @unique
  excerpt String
  image   String
  date    DateTime
  content String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
    @@map("blogs")
     @@index([date(sort: Desc)])


}

model Homily {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  slug     String   @unique
  summary  String
  image    String
  date     DateTime
  content  String
  userId   String?   @db.ObjectId
  author   User?     @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
    @@map("homilies")
     @@index([date(sort: Desc)])

}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  password  String
  role      UserRole  @default(PRIEST)
  avatar    String?
  bio       String?
  title     String?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  homilies  Homily[]
}

enum UserRole {
  ADMIN
  BISHOP
}

model Clergy {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  role      String
  parish    String
  address   String
  phone     String?
  extra     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Event {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  slug     String   @unique
  title    String
  date     DateTime
  excerpt  String
  cover    String
  images   String[]
  content  String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("events")
  @@index([date(sort: Desc)])
}

model Announcement {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  title       String
  date        DateTime
  image       String
  description String
  details     String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("announcements")
  @@index([date(sort: Desc)])
}